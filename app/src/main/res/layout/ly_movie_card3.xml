<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp">

    <ImageView
            android:id="@+id/media_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:transitionName="movieBackground"/>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:background="#7F000000">

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha=".4"
                android:id="@+id/vw_blacklayer"/>

        <ImageView
                android:layout_width="80dp"
                android:layout_height="110dp"
                android:id="@+id/img_cover_d"
                android:scaleType="centerCrop"
                android:transitionName="moviePoster"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/primary_text"
                android:transitionName="movieTitle"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/img_cover_d"
                android:layout_toRightOf="@+id/img_cover_d"
                android:layout_toEndOf="@id/img_cover_d"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/sub_text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="3"
                android:textSize="12sp"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:layout_below="@+id/primary_text"
                android:layout_toRightOf="@+id/img_cover_d"
                android:layout_toEndOf="@+id/img_cover_d"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="o Release date: March 25, 2016"
                android:id="@+id/release_text"
                android:textColor="#ffffff"
                android:layout_marginTop="2dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:layout_below="@+id/sub_text"
                android:layout_toRightOf="@+id/img_cover_d"
                android:layout_toEndOf="@+id/img_cover_d"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
